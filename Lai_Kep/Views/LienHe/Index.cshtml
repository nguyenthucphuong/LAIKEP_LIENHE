@{
	ViewData["Title"] = "Index"; Layout = "~/Views/Shared/_Layout.cshtml";
	<link rel="stylesheet" href="~/css/lienhe.css" />
}
@section Scripts {
	<script src="~/js/lienhe.js"></script>
}

<div class="background d-flex justify-content-center align-items-center">
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="form-wrapper">
					<h1 class="text-center my-5">THÔNG TIN HỌC VIÊN</h1>
					<form action="/LienHe/Index" id="myForm" method="post">
						<div class="mb-3">
							<label for="hoTen" class="form-label">Họ Tên</label>
							<input type="text" class="form-control" id="hoTen" name="hoTen" value="@ViewData["hoten"]" required>
							<label for="ngaySinh" class="form-label">Ngày sinh</label>
							<input type="date" class="form-control" id="ngaySinh" name="ngaySinh" value="@ViewData["ngaySinh"]" required>
							<label for="eMail" class="form-label">Email</label>
							<input type="email" class="form-control" id="eMail" name="eMail" value="@ViewData["email"]" required oninvalid="setCustomValidity('Vui lòng nhập đúng định dạng email!')" oninput="setCustomValidity('')">
							<label for="dienThoai" class="form-label">Số điện thoại</label>
							<input type="tel" class="form-control" id="dienThoai" name="dienThoai" value="@ViewData["dienthoai"]" pattern="[0-9]{10}" required>
						</div>
						<div class="d-flex align-items-center justify-content-center mt-5">
							<button type="submit" id="myInput" class="btn btn-primary px-4 py-2" onclick="disableForm(event)">Gởi thông tin</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
